<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ending_2"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="60dp"
        android:gravity="center">

        <!-- Logo Image -->
<!--        <ImageView-->
<!--            android:id="@+id/logoImageView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="2"-->
<!--            android:layout_gravity="center"-->
<!--            app:srcCompat="@drawable/logo2" />-->

        <!-- Good Ending Text Image -->
        <ImageView
            android:id="@+id/textImageView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bad_end_text" />


        <!-- Details Text -->
        <TextView
            android:id="@+id/detailEnding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Congrats! You achieved the best outcome!"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/thaisanslite_r1"
            android:textStyle="bold"/>

        <!-- Back to Menu Button -->
        <Button
            android:id="@+id/BackTomenu"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background3"
            android:padding="12dp"
            android:text="@string/bt_backToMenu"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/thaisanslite_r1"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
